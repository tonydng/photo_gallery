<% unless @photo.nil? %>
<h1><%= @photo.name %></h1>
<h5>Created by: <%= @photo.gallery.user %></h5>
<% if @photo.image? %>
	<%= image_tag @photo.image_url %>
<% else %>
	<div class="image_placeholder"></div>
<% end %>
<br>
<span id="watchers">
	<%= toggle_watching_button %>
	<strong>Watchers:</strong>
	<%= @photo.watchers.to_sentence %>
</span>
<%= render 'comments/comments' %>
<%= render 'comments/form' %>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back to gallery")),
              @gallery, :class => 'btn'  %>

  <% unless @gallery.nil? %>           
	  <% if (@gallery.user == current_user) || (!current_user.nil? && current_user.admin?) %>
		  <%= link_to t('.edit', :default => t("helpers.links.edit photo")),
		              [:edit, @gallery, @photo], :class => 'btn' %>
		  <%= link_to t('.destroy', :default => t("helpers.links.delete photo")),
		              [@gallery, @photo],
		              :method => 'delete',
		              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
		              :class => 'btn btn-danger' %>
	  <% end %>
  <% end %>
</div>
<% end %>
