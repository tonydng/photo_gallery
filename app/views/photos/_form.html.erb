<%= simple_form_for [@gallery, @photo], :html => { :multipart => true, :class => 'form-horizontal' } do |f| %>
  <%= f.hidden_field :gallery_id %>
  <%= f.input :name %>
  <%= f.input :image %>
  <%= f.input :remote_image_url %>
  <div class="form-actions">
    <%= f.button :submit, :class => 'btn-primary' %>
    <%= link_to t('.back to gallery', :default => t("helpers.links.back to gallery")),
                @gallery, :class => 'btn' %>
  </div>
<% end %>
