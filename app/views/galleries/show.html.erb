<%- model_class = Gallery -%>
<div class="page-header">
  <% title(@gallery.name, "Galleries") %>
  <h1><%=t '.title', :default => model_class.model_name.human %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:name) %>:</strong></dt>
  <dd><%= @gallery.name %></dd>
  <dt><strong><%= model_class.human_attribute_name(:description) %>:</strong></dt>
  <dd><%= @gallery.description %></dd>
</dl>

<div id="photos">
  <% for photo in @gallery.photos %>
    <div class="photo">
      <div class="image_placeholder"></div>
      <div class="name">
        <%= photo.name %>
      </div>
      <div class="actions">
        <%= link_to "edit", [@gallery, photo] %> |
        <%= link_to "remove", [@gallery, photo], confirm: "You sure?", method: :delete %>
      </div>
    </div>
  <% end %>
  <div class="clear"></div>
</div>

<div class="form-actions">
  <%= link_to "Add a photo",
              new_gallery_photo_path(@gallery), :class => 'btn' %>
  <%= link_to t('.back', :default => t("helpers.links.view galleries")),
              galleries_path, :class => 'btn btn-primary'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit gallery")),
              edit_gallery_path(@gallery), :class => 'btn' %>
  <%= link_to t('.destroy', :default => t("helpers.links.delete gallery")),
              gallery_path(@gallery),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>
